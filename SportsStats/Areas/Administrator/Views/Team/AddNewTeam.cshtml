
@model AddNewTeamModel
@{
    ViewData["Title"] = "Add new team";
}
@if (ViewBag.Comment != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Comment");
        };
    </script>
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form id="AddNewTeam" asp-route-returnUrl="" method="post" enctype="multipart/form-data">
            
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.Name" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.Name"></label>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>

            <div class="form-group">
                <label asp-for="@Model.Picture" class="contol-label" />Logo</>
                <input asp-for="@Model.Picture" class="form-contol" type="file" name="files" />
                <span asp-validation-for="@Model.Picture" class="text-danger"></span>
            </div>

            <p></p>
            <p></p>
            <div class="mb-3">
                <label asp-for="@Model.CountryId" class="form-label">Country</label>
                <select asp-for="@Model.CountryId" class="form-control">
                    <option value=>--Select country--</option>
                    @foreach (var country in Model.Countries)
                    {

                        <option value="@country.Id">@country.Name</option>
                    }
                </select>
            </div>

            <p></p>
            <p></p>
            ﻿
            <div class="mb-3">
                <label asp-for="@Model.StadiumId" class="form-label">Stadium</label>
                <select asp-for="@Model.StadiumId" class="form-control">
                    <option value=>--Select stadium--</option>
                    @foreach (var stadium in Model.Stadiums)
                    {

                        <option value="@stadium.Id">@stadium.Name</option>
                    }
                </select>
            </div>
            <p></p>
            <p></p>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}