@model ActionForTeamsInGroup
@{
    ViewData["Title"] = "Result";
}

<div class="text-center">
    <h3>Teams to add to @ViewBag.Tournament </h3>
</div>


<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="@Model.SelectedTeams" class="form-label">Teams</label>
                <select asp-for="@Model.SelectedTeams" multiple class="form-control">
                    @foreach (var team in Model.Teams)
                    {
                        <option value="@team.Id">@team.Name</option>
                    }
                </select>
            </div>
            <p></p>
            <p></p>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Remove teams</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
