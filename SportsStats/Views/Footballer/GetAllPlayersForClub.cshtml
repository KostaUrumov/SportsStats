@model List<ShowFootballerToClubModel>
@{
    ViewData["Title"] = "Result";
}

<div class="text-center">
    <h3>Footballers of @ViewBag.TeamName</h3>
</div>
@if (Model.Count == 0)
{
    <div class="text-center">
        <p></p>
        <p></p>
        <p></p>
        <h5>No signed players for this club</h5>
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Contract started</th>
                <th scope="col">Contract expires</th>
                <th scope="col">Birthday</th>
                <th scope="col">Country</th>
                <th scope="col">International caps</th>
                <th scope="col">Position</th>
                <th scope="col">Picture</th>
                <th scope="col">Details</th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            int number = @i + 1;
            <tbody>
                <tr>
                    <td>@number</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].StartContract</td>
                    <td>@Model[i].EndContract</td>
                    <td>@Model[i].BirthDay</td>
                    <td>@Model[i].Country</td>
                    <td>@Model[i].InternationaCaps</td>
                    <td>@Model[i].Position</td>
                    <td>
                        @if (@Model[i].Picture == null)
                        {
                            <p>No photo</p>
                        }
                        else
                        {
                            <img src="data:image;base64,@System.Convert.ToBase64String(@Model[i].Picture)" width="40" height="40" />

                        }
                    </td>
                    
                    <td>
                        <a asp-controller="Footballer" asp-action="Details" asp-route-id="@Model[i].Id" class="btn btn-success">Details</a>
                    </td>
                        
                    
                </tr>
            </tbody>
        }
    </table>
}

