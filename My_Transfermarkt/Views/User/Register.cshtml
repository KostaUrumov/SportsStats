@model RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.Username" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.Username"></label>
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.Email" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="@Model.Email"></label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.FirstName" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="@Model.FirstName"></label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div>
            </div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.LastName" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="@Model.LastName"></label>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div>
            </div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.PhoneNumber" class="form-control" autocomplete="phoneNumber" aria-required="true" />
                <label asp-for="@Model.PhoneNumber"></label>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.Password" class="form-control" autocomplete="password" aria-required="true" />
                <label asp-for="@Model.Password"></label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div>
            </div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.RepeatPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.RepeatPassword"></label>
                <span asp-validation-for="@Model.RepeatPassword" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>
            <div class="mb-3">
                <select asp-for="@Model.Role" class="form-control">
                    <option value=>--You are--</option>
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role">@role.ToString()</option>
                    }
                </select>
            </div>

            <div>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}