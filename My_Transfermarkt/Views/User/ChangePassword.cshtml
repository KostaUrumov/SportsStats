@model ChangePassWordModel
@{
    ViewData["Title"] = "Change your password";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.CurrentPassword" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.CurrentPassword"></label>
                <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.NewPassword" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.NewPassword"></label>
                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.RepeatNewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.RepeatNewPassword"></label>
                <span asp-validation-for="@Model.RepeatNewPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Change</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}