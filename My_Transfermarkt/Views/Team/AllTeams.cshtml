@using My_Transfermarkt_Core.Models.TeamModels
@using My_Transfermarkt_Core.Pagening
@model List<ShowTeamModelView>
@{
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;

    }
}
@{
    ViewData["Title"] = "Result";
}

<div class="text-center">
    <h3>Teams</h3>
    <h3><a class="page-link" asp-controller="Footballer" asp-action="SearchFootballersForCountry">Find footballers by country</a></h3>
</div>
@if (Model.Count == 0)
{
    <div class="text-center">
        <p></p>
        <p></p>
        <p></p>
        <h5>Nothing found</h5>
    </div>
}
<div class="text-center">
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Country</th>
            <th scope="col">Stadium Name</th>
            <th scope="col">Logo</th>
        </tr>
    </thead>

    @for (int i = 0; i < Model.Count; i++)
    {
        int number = @i + 1;
        <tbody>
            <tr>
                <td>@number</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].Country</td>
                <td>
                    @if (@Model[i].Stadium == null)
                    {
                        <p>No home stadium</p>
                    }
                    else
                    {
                        @Model[i].Stadium

                    }

                </td>
                <td>
                    @if (@Model[i].Picture == null)
                    {
                        <p>No Logo</p>
                    }
                    else
                    {
                        <img src="data:image;base64,@System.Convert.ToBase64String(@Model[i].Picture)" width="40" height="40" />

                    }

                </td>

                <td>
                    <a asp-controller="Footballer" asp-action="GetAllPlayersForClub" asp-route-id="@Model[i].Id" class="btn btn-warning">Players</a>
                </td>


            </tr>
        </tbody>

    }
</table>
<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @for (int pge = pager.Startpage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage ? "active": ")")">
                    <a class="page-link" asp-controller="Team" asp-action="AllTeams" asp-route-pg="@pge">@pge</a>
                </li>
            }
        </ul>
    }
    @if (pager.TotalPages == 0)
    {
        <ul class="pagination justify-content-end">

            @for (int pge = pager.Startpage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage ? "active": ")")">
                    <a class="page-link" asp-controller="Team" asp-action="AllTeams" asp-route-pg="@pge">@pge</a>
                </li>
            }
        </ul>
    }
</div>


