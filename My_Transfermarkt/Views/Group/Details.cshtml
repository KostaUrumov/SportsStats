@model List<DetailsGroupModel>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Position</th>
            <th scope="col">Name</th>
            <th scope="col">Goal difference</th>
            <th scope="col">Points</th>
        </tr>
    </thead>

    @for (int i = 0; i < Model.Count; i++)
    {
        int number = @i + 1;
        <tbody>
            <tr>
                <th scope="row">@number</th>
                @if (Model[i].Picture != null)
                {
                    <td><img src="data:image;base64,@System.Convert.ToBase64String(Model[i].Picture)" width="25" height="25" /> @Model[i].TeamName </td>
                }
                else
                {
                    <td>@Model[i].TeamName </td>
                }
                
                <td>@Model[i].GoalsFor:@Model[i].GoalsAgainst</td>
                <td>@Model[i].Points</td>
            </tr>
        </tbody>
    }
</table>