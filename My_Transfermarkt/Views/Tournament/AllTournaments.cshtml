@model List<ShowTournamentModel>
@{
    ViewData["Title"] = "Result";
}

<div class="text-center">
    <h3>Tournaments</h3>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Groups / Matches</th>
            <th scope="col">Standings</th>
        </tr>
    </thead>

    @for (int i = 0; i < Model.Count; i++)
    {
        <tbody>
            <tr>
                
                <td>@Model[i].Name</td>
               
               
                <td>
                    @if (@Model[i].isGroupTournament == true)
                    {
                        <a asp-controller="Group" asp-action="GetAllGroupsForTournament" asp-route-id="@Model[i].Id" class="btn btn-primary">Groups</a>
                    }
                    else
                    {
                        <a asp-controller="Tournament" asp-action="Matches" asp-route-Id="@Model[i].Id" class="btn btn-info">Matches</a>
                    }
                </td>
                <td>
                    @if (@Model[i].isGroupTournament == false)
                    {

                        <a asp-controller="Tournament" asp-action="Standings" asp-route-Id="@Model[i].Id" class="btn btn-info">Standings</a>
                    }
                </td>
                
            </tr>
        </tbody>
    }
</table>    
