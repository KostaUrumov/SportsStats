@model List<StadiumViewModel>
@{
    ViewData["Title"] = "Result";
}

<div class="text-center">
    <h3>Stadiums</h3>
</div>
@if (Model.Count == 0)
{
    <div class="text-center">
        <p></p>
        <p></p>
        <p></p>
        <h5>Nothing found</h5>
        

    </div>
}
else
{

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Capacity</th>
                <th scope="col">Country</th>
                <th scope="col">Build in</th>
                <th scope="col">Team</th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            int number = @i + 1;
            <tbody>
                <tr>
                    <td>@number</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Capacity</td>
                    <td>@Model[i].Country</td>
                    <td>@Model[i].Built</td>
                    <td>@Model[i].Team</td>
                </tr>
            </tbody>
        }
    </table>
}