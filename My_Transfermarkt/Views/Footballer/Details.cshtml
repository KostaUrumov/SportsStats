@model ShowFootballerDetailsViewModel
@{
    ViewData["Title"] = "Result";
}

<div class="text-center">
    <h3>Details of @Model.Name</h3>
</div>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Bitrhday</th>
            <th scope="col">Country</th>
            <th scope="col">International Caps</th>
            <th scope="col">Current team</th>
            <th scope="col">Teams played</th>
            <th scope="col">Current Value</th>
            <th scope="col">Highest Value</th>
            <th scope="col">Highest Value date</th>
            <th scope="col">Position</th>
            <th scope="col">Preffered foot</th>
            <th scope="col">Picture</th>
        </tr>
    </thead>


    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.Birthday</td>
            <td>@Model.Country</td>
            <td>@Model.Caps</td>
            <td>
                @if (@Model.CurrentTeam == null && Model.IsRetired == false)
                {
                    <p>No club</p>
                }
                else if (Model.IsRetired == false)
                {
                    @Model.CurrentTeam
                }
                else
                {
                    <p>Retired</p>
                }
            </td>
            <td>
                @if (@Model.TeamsPlayed.Count() == 0)
                {
                    <p>No prevous teams played</p>
                }

                else
                {
                    @foreach (var team in @Model.TeamsPlayed)
                    {
                        <p>@team.Name.ToString()</p>
                    }
                }

            </td>
            <td>
                @if(Model.IsRetired == false)
                {
                    @Model.CurrentValue
                    ;
                }
                else
                {
                    <p>Retired</p>
                }

            </td>
            <td>@Model.HighestValue</td>
            <td>@Model.HighestValueDate</td>
            <td>@Model.Position</td>
            <td>@Model.PrefferedFoot</td>
            <td>
                @if (@Model.Photo == null)
                {
                   <p>No picture </p>
                }
                else
                {
                    <img src="data:image;base64,@System.Convert.ToBase64String(@Model.Photo)" width="40" height="40" />
                }

            </td>
            

        </tr>
    </tbody>


