@model SignFootballerToATeam
@{
    ViewData["Title"] = "Sign to a club";
}
@if (ViewBag.Comment != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Comment");
        };
    </script>
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p></p>
            <p></p>
            
            <div class="mb-3">
                <label asp-for="@Model.TeamId" class="form-label">Team</label>
                <select asp-for="@Model.TeamId" class="form-control">
                    <option value=>--Select Team--</option>
                    @foreach (var team in Model.Teams)
                    {
                        <option value="@team.Id">@team.Name</option>
                    }
                </select>
            </div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.StartContractDate" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.StartContractDate"></label>
                <span asp-validation-for="@Model.StartContractDate" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.EndContractDate" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.EndContractDate"></label>
                <span asp-validation-for="@Model.EndContractDate" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Sign</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}