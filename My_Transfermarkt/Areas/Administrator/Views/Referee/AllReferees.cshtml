@model List<ShowRefereeModel>
@{
    ViewData["Title"] = "Result";
}

<div class="text-center">
    <h3>Referees</h3>
</div>
@if (Model.Count == 0)
{
    <div class="text-center">
        <p></p>
        <p></p>
        <p></p>
        <h5>Nothing found</h5>
        <a class="" asp-area="Administrator" asp-controller="Referee" asp-action="AddnewRef">Add new referee</a>

    </div>
}
else
{
    <div class="text-center">
        <a class="" asp-area="Administrator" asp-controller="Referee" asp-action="AddnewRef">Add new referee</a>
    </div>


    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Country</th>
                <th scope="col">Rating</th>
                <th scope="col">Edit?</th>
            </tr>
        </thead>



        @for (int i = 0; i < Model.Count; i++)
        {
            int number = @i + 1;
            <tbody>
                <tr>
                    <th scope="row">@number</th>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Country</td>
                    <td>
                        @if(Model[i].Rating == null)
                        {
                            <p>No Rating</p>
                        }
                        else
                        {
                         @Model[i].Rating
                        }
                        
                    </td>
                    <td>
                        <a asp-controller="Referee" asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning">Edit</a>
                    </td>
                    
                </tr>

            </tbody>
        }
    </table>
}