@using My_Transfermarkt_Core.Models.TournamentModels
@model List<ShowTournamentModel>
@{
    ViewData["Title"] = "Result";
}

<div class="text-center">
    <h3>Tournaments</h3>
</div>


    <div class="text-center">
        <a class="" asp-area="Administrator" asp-controller="Stadium" asp-action="AddNewStadium">Add new stadium</a>
    </div>


    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Add Teams</th>
                <th scope="col">Current Teams in</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            int number = @i + 1;
            <tbody>
                <tr>
                    <td>@number</td>
                    <td>@Model[i].Name</td>
                     <td>
                        <a asp-controller="Tournament" asp-action="AddTeams" asp-route-id="@Model[i].Id" class="btn btn-warning">Add Teams</a>
                    </td>
                    <td>

                    </td>
                    <td>
                        <a asp-controller="Tournament" asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Tournament" asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
