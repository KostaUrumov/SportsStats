@model EditTournamentModel
@{
    ViewData["Title"] = "Edit tournament";
}

@if (ViewBag.Comment != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Comment");
        };
    </script>
}

<h1>@ViewData["Title"]</h1>
@if (Model.Groups > 0)
{
    <div class="row">

        <div class="col-md-4">
            <form id="registerForm" asp-route-returnUrl="" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="@Model.Name" class="form-control" autocomplete="" aria-required="true" />
                    <label asp-for="@Model.Name"></label>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <p></p>
                <p></p>
                <div class="form-floating">
                    <input asp-for="@Model.StartDate" class="form-control" autocomplete="" aria-required="true" />
                    <label asp-for="@Model.StartDate">End Date</label>
                    <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
                </div>

                <p></p>
                <p></p>
                <div class="form-floating">
                    <input asp-for="@Model.EndtDate" class="form-control" autocomplete="" aria-required="true" />
                    <label asp-for="@Model.EndtDate">Start date</label>
                    <span asp-validation-for="@Model.EndtDate" class="text-danger"></span>
                </div>
                <p></p>
                <p></p>
                <div class="form-floating">
                    <input asp-for="@Model.NumberOfTeams" class="form-control" autocomplete="" aria-required="true" />
