                    <label asp-for="@Model.Rounds">Rounds in group</label>
                    <span asp-validation-for="@Model.Rounds" class="text-danger"></span>
                </div>
                <p></p>
                <p></p>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
            </form>
        </div>
    </div>
    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
    return;

}

