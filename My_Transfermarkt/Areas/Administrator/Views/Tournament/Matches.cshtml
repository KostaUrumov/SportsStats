@using My_Transfermarkt_Core.Models.MatchModels
@model List<ShowMatchModel>
@{
    ViewData["Title"] = "Matches";
}

<div class="text-center">
    <h3>Matches in @ViewBag.Tournament</h3>
</div>
@if (Model.Count == 0)
{
    <div class="text-center">
        <p></p>
        <p></p>
        <p></p>
        <h5>Nothing found</h5>
        <a class="" asp-area="Administrator" asp-controller="Match" asp-action="AddNewMatch" asp-route-id="@ViewBag.Id">Add new Match</a>

    </div>
}

else
{



    <div class="text-center">
        <a class="" asp-area="Administrator" asp-controller="Match" asp-action="AddNewMatch" asp-route-id="@ViewBag.Id">Add new Match</a>
    </div>


    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">HomeTeam</th>
                <th scope="col">Results</th>
                <th scope="col">AwayTeam</th>
                <th scope="col">Date</th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            int number = @i + 1;
            <tbody>
                <tr>
                    <td>@number</td>
                    <td>@Model[i].HomeTeam</td>
                    <td>@Model[i].Result</td>
                    <td>@Model[i].AwayTeam</td>
                    <td>@Model[i].Date</td>
                    
                </tr>
            </tbody>
        }
    </table>
}
