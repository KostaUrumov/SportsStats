@using My_Transfermarkt_Core.Models.StadiumModels
@model AddNewStadiumModel
@{
    ViewData["Title"] = "Edit stadium";
}

<h1>@ViewData["Title"]</h1>

<div class="row">

    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.Name" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.Name"></label>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.Capacity" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.Capacity"></label>
                <span asp-validation-for="@Model.Capacity" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>

            <div class="form-floating">
                <input asp-for="@Model.Build" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.Build"></label>
                <span asp-validation-for="@Model.Build" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>

            <div class="mb-3">
                <label asp-for="@Model.CountryId" class="form-label">Country</label>
                <select asp-for="@Model.CountryId" class="form-control">
                    <option value=>--Select country--</option>
                    @foreach (var country in Model.Countries)
                    {
                        <option value="@country.Id">@country.Name</option>
                    }
                </select>
            </div>
            <p></p>
            <p></p>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
