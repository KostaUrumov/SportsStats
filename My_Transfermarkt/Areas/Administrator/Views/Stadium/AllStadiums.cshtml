@using My_Transfermarkt_Core.Models.StadiumModels
@model List<StadiumViewModel>
@{
    ViewData["Title"] = "Result";
}

<div class="text-center">
    <h3>Stadiums</h3>
</div>
@if (Model.Count == 0)
{
    <div class="text-center">
        <p></p>
        <p></p>
        <p></p>
        <h5>Nothing found</h5>
        <a class="" asp-area="Administrator" asp-controller="Stadium" asp-action="AddNewStadium">Add new stadium</a>

    </div>
}
else
{
    <div class="text-center">
        <a class="" asp-area="Administrator" asp-controller="Stadium" asp-action="AddNewStadium">Add new stadium</a>
    </div>
    

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Capacity</th>
                <th scope="col">Country</th>
                <th scope="col">Build in</th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            int number = @i + 1;
            <tbody>
                <tr>
                    <td>@number</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Capacity</td>
                    <td>@Model[i].Country</td>
                    <td>@Model[i].Built</td>
                    <td>
                        <a asp-controller="Stadium" asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Stadium" asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
}