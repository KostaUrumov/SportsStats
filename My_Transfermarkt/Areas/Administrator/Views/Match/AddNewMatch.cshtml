@model AddNewMatchModel
@{
    ViewData["Title"] = "Add new Match";
}

@if (ViewBag.Comment != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Comment");
        };
    </script>
}

<h1>@ViewData["Title"] to @ViewBag.Tournament</h1>
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="@Model.Round" class="form-label">Home team</label>
                <select asp-for="@Model.Round" class="form-control">
                    <option value=>--Select Round--</option>
                    @foreach (var round in Model.Rounds)
                    {
                        <option value="@round">@round</option>
                    }
                </select>
            </div>
            <p></p>
            <p></p>

            <div class="mb-3">
                <label asp-for="@Model.HomeTeamId" class="form-label">Home team</label>
                <select asp-for="@Model.HomeTeamId" class="form-control">
                    <option value=>--Select Home Team--</option>
                    @foreach (var team in Model.Teams)
                    {
                        <option value="@team.Id">@team.Name</option>
                    }
                </select>
            </div>
            <p></p>
            <p></p>

            <div class="mb-3">
                <label asp-for="@Model.AwayTeamId" class="form-label">Away team</label>
                <select asp-for="@Model.AwayTeamId" class="form-control">
                    <option value=>--Select Away Team--</option>
                    @foreach (var team in Model.Teams)
                    {
                        <option value="@team.Id">@team.Name</option>
                    }
                </select>
            </div>
            <p></p>
            <p></p>

            <div class="mb-3">
                <label asp-for="@Model.RefereeId" class="form-label">Referee</label>
                <select asp-for="@Model.RefereeId" class="form-control">
                    <option value=>--Select Referee--</option>
                    @foreach (var referee in Model.Referees)
                    {
                        <option value="@referee.Id">@referee.FirstName @referee.LastName </option>
                    }
                </select>
            </div>
            <p></p>
            <p></p>



            <div class="form-floating">
                <input asp-for="@Model.Date" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.Date"></label>
                <span asp-validation-for="@Model.Date" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.HomeScore" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.HomeScore"></label>
                <span asp-validation-for="@Model.HomeScore" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.AwayScore" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.AwayScore"></label>
                <span asp-validation-for="@Model.AwayScore" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}